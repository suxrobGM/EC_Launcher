<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EC_Launcher">
    
    <!-- Custom Styles -->
    <LinearGradientBrush x:Key="LinearGradient" EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
        <GradientStop Color="#FFE8E8E8" Offset="1"/>
        <GradientStop Color="#FF7A430B" Offset="0.4"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="YellowLinearGradientBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Color="#FFFF8B00" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BlueLinearGradientBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Color="#FF4F4BB0" Offset="1"/>
    </LinearGradientBrush>

    <Style x:Key="CustomButton" TargetType ="Button">
        <Setter Property="Background" Value ="{StaticResource LinearGradient}"/>
        <Setter Property="BorderBrush" Value="{StaticResource YellowLinearGradientBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource BlueLinearGradientBrush}"/>
        <Setter Property="FontFamily" Value="Stencil"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

</ResourceDictionary>